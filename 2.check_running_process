---- blocking sessions -----
SELECT 
    s.sid,
    s.serial#,
    s.username,
    s.status,
    s.program,
    s.module,
    s.event,
    s.wait_class,
    s.seconds_in_wait,
    s.state,
    sq.sql_text,
    s.blocking_session
FROM 
    v$session s
LEFT JOIN v$sql sq ON s.sql_id = sq.sql_id
WHERE 
    s.username IS NOT NULL
    AND s.status = 'ACTIVE' 
    --and sql_text like '%create%'
ORDER BY s.seconds_in_wait DESC;

-- ALTER SYSTEM KILL SESSION '2441,56461' IMMEDIATE;


------- running job -------
 SELECT 
    r.job_name,
    r.session_id AS sid,
    s.serial#,
    s.osuser,
    s.program,
    s.sql_id
FROM dba_scheduler_running_jobs r
JOIN v$session s ON r.session_id = s.sid
WHERE r.job_name = 'JOB_NAME';

